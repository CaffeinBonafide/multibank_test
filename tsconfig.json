{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "noEmit": true,
    "types": ["cypress", "node"],
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["cypress/support/pages/*"],
      "@utils/*": ["cypress/support/utils/*"],
      "@fixtures/*": ["cypress/fixtures/*"]
    }
  },
  "include": [
    "cypress/**/*.ts",
    "cypress/**/*.cy.ts",
    "cypress.config.ts"
  ]
}
